<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/leaf</item>
        <item name="colorSwitchThumbNormal">@color/leaf</item>
        <item name="android:colorForeground">@color/leaf</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="MainToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/leaf</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="fontFamily">@font/officinasansextraboldscc</item>
    </style>

    <style name="CategoryTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/category_title_text_size</item>
        <item name="android:fontFamily">@font/officinasansextraboldscc</item>
        <item name="android:textColor">@color/light_olive_green</item>
    </style>

    <style name="CategoryCard">
        <item name="android:background">@color/light_gray</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:background">@drawable/searchview_background</item>
        <item name="android:queryHint">dasdad</item>
    </style>

    <style name="SearchTabLayout">
        <item name="tabTextColor">@color/white_70</item>
        <item name="tabIndicatorColor">@color/macaroni_and_cheese</item>
        <item name="tabBackground">@color/leaf</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
</resources>